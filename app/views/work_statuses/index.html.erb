<div class="autoscroll">
  <%= render 'search' %>

<% unless @work_info.nil? %>
    <table class="list">
      <caption>用户:<%= @user.login %></caption>


      <thead>
      <tr>
        <th>工作状态</th>
        <th>任务数量</th>
        <th>任务总量</th>
        <th></th>

      </tr>
      </thead>
      <tbody>

      <% @work_info.each do |name, value| -%>
          <tr>

            <td class="number"><%= value[:status]["name"] %></td>
            <td class="number"><%= value[:num]%></td>
            <td class="number"><%= value[:record]["task_num"] %></td>

            <td><%= link_to '编辑总量',:controller => "work_statuses", :action => "edit", :data => value, :method => "get" %></td>
          </tr>
      <% end -%>
      </tbody>
    </table>

<% end %>



</div>