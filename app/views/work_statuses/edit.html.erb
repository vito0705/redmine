<div class="autoscroll">
  <%= render 'search' %>
  <table class="list">
    <caption>用户:<%= @user.login %></caption>
    <thead>
    <tr>
      <th>工作状态</th>
      <th>任务数量</th>
      <th>任务目标总量</th>
      <th>任务数量目标完成率</th>
      <th>任务金额</th>
      <th>任务目标金额</th>
      <th>任务金额目标完成率</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <%= form_tag("/work_statuses/update", method: "get") do %>
            <tr>
              <td class="number"><%= @tasks[:status]["name"] %></td>
              <td class="number"><%= @tasks[:num] %></td>
              <td class="number"> <%= number_field_tag :task_num, @tasks[:record][:task_num], min: 0 %></td>
              <td class="number"><%= num_sum_percent(@tasks[:num], @tasks[:record][:task_num]) %></td>
              <td class="number"><%= @tasks[:money] %></td>
              <td class="number"><%= number_field_tag :money_num, @tasks[:record][:money_num], min: 0, step:0.001 %></td>
              <td class="number"><%= num_sum_percent(@tasks[:money], @tasks[:record][:money_num]) %></td>

              <%= hidden_field_tag(:user_id, @tasks[:record][:user_id]) %>
              <%= hidden_field_tag(:status_id, @tasks[:record][:status_id]) %>
              <td><%= submit_tag("更新") %></td>
            </tr>
    <% end -%>
    </tbody>
  </table>
</div>